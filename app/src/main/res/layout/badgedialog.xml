<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/trophy"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Your Badge"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:fontFamily="@font/f1"
                android:layout_marginTop="20dp"
               />
            <ImageView
                android:id="@+id/badge_bg"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_add_circle"/>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="30dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_mlarge"
                        android:layout_marginRight="@dimen/spacing_mlarge"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/trophy"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_margin="@dimen/spacing_medium"
                            android:src="@drawable/badge_trophy"
                            android:contentDescription="trophy"/>

                        <ImageView
                            android:id="@+id/ontime"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_margin="@dimen/spacing_medium"
                            android:src="@drawable/badge_ontime"
                            android:contentDescription="ontime"/>

                        <ImageView
                            android:id="@+id/verified"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_margin="@dimen/spacing_medium"
                            android:src="@drawable/badge_verified"
                            android:contentDescription="verified"/>





                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_mlarge"
                        android:layout_marginRight="@dimen/spacing_mlarge"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/crown"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_margin="@dimen/spacing_medium"
                            android:src="@drawable/badge_crown"
                            android:contentDescription="crown"/>

                        <ImageView
                            android:id="@+id/reward"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_margin="@dimen/spacing_medium"
                            android:src="@drawable/badge_reward"
                            android:contentDescription="reward"/>

                        <ImageView
                            android:id="@+id/goal"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_margin="@dimen/spacing_medium"
                            android:src="@drawable/badge_goal"
                            android:contentDescription="goal"/>




                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <Button
                android:id="@+id/savebtn"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/Save"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
