<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@color/GREEN" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRODUCT NAME"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/product_Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRODUCT TYPE"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:layout_gravity="center"
                   />
                <TextView
                    android:id="@+id/product_description"
                    android:padding="10dp"
                    android:paddingEnd="40dp"
                    android:paddingStart="30dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Lorem  dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. "
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:id="@+id/product_price"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: $500-600"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"/>
                <Button
                    android:id="@+id/btn_cont"
                    android:layout_width="330dp"
                    android:layout_height="55dp"
              android:layout_gravity="center"
                    android:background="@drawable/btn_rounded_green1"
                    android:elevation="20dp"
                    android:shadowColor="#1FC356"
                    android:layout_marginTop="10dp"
                    android:text="@string/Continue"
                    android:textAllCaps="true"
                    android:textColor="@color/GREEN"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
