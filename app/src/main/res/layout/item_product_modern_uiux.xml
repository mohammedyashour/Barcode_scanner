<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="end"
    android:layout_margin="15dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="147dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:gravity="end">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">


                    <TextView
                        android:id="@+id/UiProductName"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="title"
                        android:textColor="@color/black_text"
                        android:textSize="13sp"
                        android:layout_gravity="end"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end">





                        <TextView
                            android:id="@+id/uiUsername"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="username"
                            android:textColor="@color/gery_text"

                            />
                        <ImageView
                            android:layout_marginStart="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile_orange"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="(50)"
                            android:textColor="@color/gery_text"
                            android:textSize="12sp"

                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/ic_five_stars"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">
                        <TextView

                            android:id="@+id/uiDescription"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="description"
                            android:textColor="@color/gery_text"
                            android:textSize="12sp"

                            />
                        <TextView

                            android:id="@+id/uiBarcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text=""
                            android:textColor="@color/gery_text"
                            android:textSize="12sp"

                            />
                        <TextView

                            android:id="@+id/Uiprodddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text=""
                            android:textColor="@color/gery_text"
                            android:textSize="12sp"

                            />

                        <TextView

                            android:id="@+id/UiproductType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text=""
                            android:textColor="@color/gery_text"
                            android:textSize="12sp"

                            />
                        <TextView

                            android:id="@+id/UiImageuri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text=""
                            android:textColor="@color/gery_text"
                            android:textSize="12sp"

                            />
                        <TextView

                            android:id="@+id/UiImageID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text=""
                            android:textColor="@color/gery_text"
                            android:textSize="12sp"

                            />
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/favbtn"

                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_empty_heart2"
                        android:layout_marginEnd="190dp"

                        />
                    <TextView

                        android:id="@+id/Uiexpddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="31/10/2001"
                        android:textColor="@color/gery_text"
                        android:textSize="12sp"
                        android:layout_gravity="end"

                        />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="119dp"
                    android:layout_height="129dp"
                    android:background="@drawable/btn_white">
                    <io.armcha.elasticview.ElasticView
                        android:id="@+id/imageElasticView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:flexibility="10"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            app:cardCornerRadius="8dp">
                        <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"

                        />
                        </androidx.cardview.widget.CardView>
                    </io.armcha.elasticview.ElasticView>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:layout_margin="10dp"
                            android:alpha="0.6"
                            android:background="@drawable/price_bg"
                            android:gravity="center"
                            android:orientation="horizontal" />

                        <LinearLayout
                            android:id="@+id/price_bg"
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"

                            >


                            <TextView
                                android:id="@+id/uiPrice"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </FrameLayout>


                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

